<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/homecolor"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="24dp"
        android:text="Verify Account"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.098"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="350dp"
        android:layout_height="606dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_corners"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="VERIFY MOBILE NUMBER"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:layout_marginBottom="3dp"
            android:text="OTP has been sent to you on your mobile number, please enter it below"
            android:textColor="#9CA0A8"
            android:textSize="16sp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="314dp"
            android:layout_height="62dp"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="15dp">

            <EditText
                android:id="@+id/txtOtp2"
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:ems="10"
                android:maxLength="1"
                android:gravity="clip_horizontal|center_horizontal"
                android:inputType="phone"
                app:layout_constraintEnd_toStartOf="@+id/txtOtp3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtOtp1"
                tools:layout_editor_absoluteY="10dp" />

            <EditText
                android:id="@+id/txtOtp1"
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:layout_marginStart="24dp"
                android:ems="10"
                android:maxLength="1"
                android:gravity="clip_horizontal|center_horizontal"
                android:inputType="phone"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="10dp" />

            <EditText
                android:id="@+id/txtOtp4"
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:ems="10"
                android:maxLength="1"
                android:gravity="clip_horizontal|center_horizontal"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtOtp3"
                tools:layout_editor_absoluteY="9dp" />

            <EditText
                android:id="@+id/txtOtp3"
                android:layout_width="51dp"
                android:layout_height="44dp"
                android:ems="10"
                android:maxLength="1"
                android:gravity="clip_horizontal|center_horizontal"
                android:inputType="phone"
                app:layout_constraintEnd_toStartOf="@+id/txtOtp4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txtOtp2"
                tools:layout_editor_absoluteY="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:textColor="#9CA0A8"
            android:text="Don't received otp?" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_margin="15dp">

            <Button
                android:id="@+id/btnChange"
                android:layout_width="147dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="27dp"
                android:backgroundTint="@color/signcolor"
                android:text="Resend in 30s"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSubmit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="151dp"
                android:layout_height="48dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="27dp"
                android:backgroundTint="@color/btnface"
                android:text="Submit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnChange"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>