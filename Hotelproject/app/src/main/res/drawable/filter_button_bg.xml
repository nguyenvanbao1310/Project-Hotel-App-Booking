<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi button được nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->
            <corners android:radius="15dp" /> <!-- Góc bo tròn -->
            <stroke android:width="2dp" android:color="#FFEB3B"/> <!-- Màu vàng khi nhấn -->
        </shape>
    </item>

    <!-- Khi button không được nhấn (trạng thái bình thường) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Màu nền trắng -->
            <corners android:radius="15dp" /> <!-- Góc bo tròn -->
            <stroke android:width="1dp" android:color="@color/text_primary"/> <!-- Viền màu tím -->
        </shape>
    </item>
</selector>
